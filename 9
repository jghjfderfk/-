#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int x, y=60;
	cout << "Vvedite kol-vo sek" << endl;
	cin >> x;
	x = x % y;
	cout << x;
	return 0;
}

#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int x, y=7;
	cout << "Vvedite den'" << endl;
	cin >> x;
	x = x % y;
	switch (x) {
	case 0:
		cout << "voskresenye";
		break;
	case 1:
		cout << "ponedel'nik";
		break;
	case 2:
		cout << "vtornik";
		break;
	case 3:
		cout << "sreda";
		break;
	case 4:
		cout << "chetverg";
		break;
	case 5:
		cout << "pyatnitsa";
		break;
	case 6:
		cout << "subbota";
		break;
	}
	return 0;
}

#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int x, y = 7, N, c;
	cout << "Vvedite den'" << endl;
	cin >> x;
	cout << "Vvedite nomer dnya nedeli 1 yanvarya, N<=7" << endl;
	cout << "1-pn"<<endl;
	cout << "2-vt" << endl;
	cout << "3-sr" << endl;
	cout << "4-cht" << endl;
	cout << "5-pt" << endl;
	cout << "6-sb" << endl;
	cout << "7-vs" << endl;
	cin >> N;
	if (N == 7) {
		N = 0;
	}
	c = (x+N-1)%y;
	switch (c) {
	case 0:
		cout <<x<<" chislo-voskresenye";
		break;
	case 1:
		cout << x << " chislo-ponedel'nik";
		break;
	case 2:
		cout << x << " chislo-vtornik";
		break;
	case 3:
		cout << x << " chislo-sreda";
		break;
	case 4:
		cout << x << " chislo-chetverg";
		break;
	case 5:
		cout << x << " chislo-pyatnitsa";
		break;
	case 6:
		cout << x << " chislo-subbota";
		break;
	}
	return 0;
}


#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int A, B, C, Y, N, S1, S2, S, K;
	cout << "vvedite A" << endl;
	cin >> A;
	cout << "vvedite B" << endl;
	cin >> B;
	cout << "vvedite C" << endl;
	cin >> C;
	Y = A / C; // сколько в длине С
	N = B / C; // сколько в ширине С
	K = Y * N; // количество квадратов в прм
	S2 = C * C; // площадь квадрата
	S1 = K * S2; // площадь занятая квадратами
	S = A*B - S1; // незанятая площадь
	cout << "kol-vo kvadratov v pryamougol.=" << K<< endl;
	cout << "nezanyataya ploshad'=" << S;
  return 0;
}
