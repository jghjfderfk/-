#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int x1, y1, x2, y2;
	double d;
	cout << "Vvedite x1"<< "   ";
	cin >> x1;
	cout << "Vvedite y1" << "   ";
	cin >> y1;
	cout << "Vvedite x2" << "   ";
	cin >> x2;
	cout << "Vvedite y2" << "   ";
	cin >> y2;
	d = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));
	cout << "rasstoyaniye=" << d;
	return 0;
}

#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int A, B, C, AC, BC, S;
	double d;
	cout << "Vvedite A"<< "   ";
	cin >> A;
	cout << "Vvedite B" << "   ";
	cin >> B;
	cout << "Vvedite C" << "   ";
	cin >> C;
	if (A > C) {
		AC = A - C;
		cout << "dlina otrezka AC=" << AC << endl;
	}
	else {
		AC = C - A;
		cout << "dlina otrezka AC=" << AC << endl;
	}
	if (B > C) {
		BC = B - C;
		cout << "dlina otrezka BC=" << BC << endl;
	}
	else {
		BC = C - B;
		cout << "dlina otrezka BC=" << BC << endl;
	}
	S = AC + BC;
	cout << "sum=" << S << endl;
	
	return 0;
}

#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int A, B, AC, BC, P;
	double C;
	cout << "Vvedite A" << "  ";
	cin >> A;
	cout << "Vvedite B" << "  ";
	cin >> B;
	cout << " togda C="; 
	C = (double)(A + B) / 2;
	cout << C << endl;
	if (A > B) {
		AC = A - C;
		BC = C - B;
		cout << "AC=" << AC<< endl;
		cout << "BC=" << BC << endl;
	}
	else {
		AC = C - A;
		BC = B - C;
		cout << "AC=" << AC << endl;
		cout << "BC=" << BC << endl;
	}
	P = AC * BC;
	cout << "proizvedenir otrezkov=" << P;
	return 0;
}
#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int x1, y1, x2, y2, P, S, a, b;
	cout << "vvedite x1, y1" << endl;
	cin >> x1 >> y1;
	cout << "vvedite x2, y2" << endl;
	cin >> x2 >> y2;
	a = abs(x2 - x1);
	b = abs(y2 - y1);
	P = 2 * (a + b);
	S = a * b;
	cout << "Perimetr=" << P << endl;
	cout << "Ploshad'=" << S;
	return 0;
}

#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	int x1, y1, x2, y2, x3, y3;
	cout << "vvedite x1, y1" << endl;
	cin >> x1 >> y1;
	cout << "vvedite x2, y2" << endl;
	cin >> x2 >> y2;
	cout << "vvedite x3, y3" << endl;
	cin >> x3 >> y3;
	double P, S, a, b, c, p1;
	a = sqrt((x2-x1)* (x2 - x1)+ (y2 - y1)* (y2 - y1));
	b = sqrt((x2 - x3) * (x2 - x3) + (y2 - y3) * (y2 - y3));
	c= sqrt((x3 - x1) * (x3 - x1) + (y3 - y1) * (y3 - y1));
	P = c + a + b;
	p1 = P / 2;
	S = sqrt(p1*(p1-a)*(p1-b)*(p1-c));
	cout << "Perimetr=" << P << endl;
	cout << "Ploshad'=" << S;
	return 0;
}
