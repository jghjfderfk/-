#include<iostream>
#include<math.h>

using namespace std;
int main() {
	setlocale(LC_ALL, "RUS");
	double x, y, P;
	cout << "Введите стоимость конфет за 1 кг" << endl;
	cin >> x;
	cout<<"стоимость конфет за " << endl;
	for (y = 0.1; y <= 1; y+=0.1) {
		P = x * y;
		cout << y << "=" << P << endl;
	}
	return 0;
}

#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "RUS");
	int N, i;
	double x;
	cout << "Введите число >0" << endl;
	cin >> N;
	for (i = 1; i <= N; i++) {
		x = (double)1.1 * i;
		cout << " " << x;
	}
	return 0;
}

#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");
    int N;
    cout << "Введите число >0" << endl;
    cin >> N;
    int x = 0;
    int i;
    for (i = 1; i <= (2 * N - 1); i += 2) {
        x = x + i;
        cout << x;

    }
    return 0;
}

